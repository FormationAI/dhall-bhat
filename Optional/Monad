    let Monad = ./../Monad/Type

in  let map = (./functor/endo/types).map

in  let concat =
            λ(a : Type)
          → λ(x : Optional (Optional a))
          → Optional/fold
            (Optional a)
            x
            (Optional a)
            (λ(y : Optional a) → y)
            ([] : Optional a)

in      ./Applicative
      ∧ { bind =
              λ(a : Type)
            → λ(b : Type)
            → λ(k : a → Optional b)
            → λ(fa : Optional a)
            → concat b (map a (Optional b) k fa)
        }
    : Monad Optional
